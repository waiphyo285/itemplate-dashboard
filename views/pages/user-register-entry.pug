extends ../includes/layout-main
block content
  main.card.mx-3.p-3(role='main')
    include ./../includes/entry/layout-entry-header
    include ./../includes/entry/layout-entry-form
      block inputs

        div.form-group.row        
          div.col-sm-6.mb-3
            label.control-label(for='username') Username
            input.form-control.input-sm#username(type='text', name='username', value=data.username, maxlength="55" autocomplete="off" required autofocus)
      
          div.col-sm-6.mb-3
            label.control-label(for='password') Password
            div.input-group
              input.form-control.input-sm#password(type='password', name='password', role='password' value="" data-toggle="password-validator" data-match-pass=".conf-pass" data-target=".pwd-errors" required)
              div.input-group-append
                div.input-group-text
                  i.bi.bi-eye-slash(aria-hidden='true')

          div.col-sm-6.mb-3
            label.control-label(for='fullname') Full Name
            input.form-control.input-sm#fullname(type='text', name='fullname', value=data.fullname, maxlength="180" autocomplete="off" required)
          
          div.col-sm-6.mb-3
            label.control-label.d-block(for='status') Status 
            .btn-group.btn-group-toggle(data-toggle='buttons')
              label.btn.btn-outline-success.btn-toggle(class=`${data.status == true ? "active" : ""}`)
                input(type='radio' name=`status` value="1" autocomplete='off' checked=(data.status == true))
                span.active  Active

              label.btn.btn-outline-secondary.btn-toggle(class=`${data.status == false ? "active" : ""}`)
                input(type='radio' name=`status` value="0" autocomplete='off' checked=(data.status == false))
                span.inactive  Inactive

        include ./../includes/entry/layout-entry-btn

    form#postSuccessForm(method='GET', action=page.list.url)

  script.
    $(document).ready(function() {
      $(".input-group-append").on('click', function(event) {
        event.preventDefault();
        if($("#password").attr("type") == "password"){
          $("#password").prop("type", "text");
          $('.input-group-text i').addClass( "bi-eye" );
          $('.input-group-text i').removeClass( "bi-eye-slash" );
        }
        else if($("#password").attr("type") == "text"){
          $("#password").prop("type", "password");
          $('.input-group-text i').addClass( "bi-eye-slash" );
          $('.input-group-text i').removeClass( "bi-eye" );
        }
      });
    });