extends ../includes/layout-main
block content
  main.card.mx-3.p-3(role='main')
    include ./../includes/entry/layout-entry-header
    include ./../includes/entry/layout-entry-form
      block inputs

        div.form-group.row
          div.col-sm-6.mb-3
            label.control-label(for='city_mm') City (MM)
            input.form-control.input-sm#city_mm(type='text', name='city_mm', value=data.city_mm, maxlength="55" autocomplete="off" required autofocus)
          
          div.col-sm-6.mb-3
            label.control-label(for='city_en') City (EN)
            input.form-control.input-sm#city_en(type='text', name='city_en' value=data.city_en maxlength="55" autocomplete="off" required)

          div.col-sm-6.mb-3
            label.control-label(for='code') Code
            input.form-control.input-sm#code(type='text', name='code', value=data.code, maxlength="55" autocomplete="off" required)
          
          div.col-sm-6.mb-3
            label.control-label(for='unit') Unit
            input.form-control.input-sm#unit(type='text', name='unit' value=data.unit maxlength="55" autocomplete="off" required)
         
          div.col-sm-6.mb-3
            label.control-label(for='description') Description
            input.form-control.input-sm#description(type='text', name='description', value=data.description autocomplete="off")
         
          div.col-sm-6.mb-3
            label.control-label.d-block(for='status') Status 
            .btn-group.btn-group-toggle(data-toggle='buttons')
              label.btn.btn-outline-success.btn-toggle(class=`${data.status == true ? "active" : ""}`)
                input(type='radio' name=`status` value="1" autocomplete='off' checked=(data.status == true))
                span.active  Active

              label.btn.btn-outline-secondary.btn-toggle(class=`${data.status == false ? "active" : ""}`)
                input(type='radio' name=`status` value="0" autocomplete='off' checked=(data.status == false))
                span.inactive  Inactive
  
        include ./../includes/entry/layout-entry-btn
  
    form#postSuccessForm(method='GET', action=page.list.url)
  script.