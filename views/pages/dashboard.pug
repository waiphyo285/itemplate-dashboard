extends ../includes/layout-main
block content
  -var isAccess = false;

  each p in program 
    if p.menuid == "dashboard"
      -isAccess = p.access
  
  if isAccess
    main.mx-3(role='main')
      .d-flex.mt-1
        h5.animate-typing.mr-auto Welcome back 👋🏻
        span.show-date-time Jan 01 00:00 AM

      .row
        .card-counter.col-md-4(onclick="location.href='/users';")
          .wrap
            h4.card-counter-title 
              span.bi.bi-person-check  Administrators
            span.card-counter-number !{data[0]}

        .card-counter.col-md-4(onclick="location.href='/user_roles';")
          .wrap
            h4.card-counter-title
              span.bi.bi-file-ruled  Access role/level
            span.card-counter-number !{data[1]}

        .card-counter.col-md-4(onclick="location.href='/students';")
          .wrap
            h4.card-counter-title
              span.bi.bi-mortarboard  Students
            span.card-counter-number !{data[2]}

      hr

      .col-md-12
        .row
          .col-md-4.my-2
            .panel.panel-default
              .panel-heading
                h4.panel-title
              .panel-content.text-center
                canvas#teamChart.chart(height='380')
              .panel-footer.text-center
                p.pt-3 A simple Team Chart with basic settings

          .col-md-4.my-2
            .panel.panel-default
              .panel-heading
                h4.panel-title
              .panel-content.text-center
                canvas#saleChart.chart(height='380')
              .panel-footer.text-center 
                p.pt-3 A sample Sale Chart with basic settings

          .col-md-4.my-2
            .panel.panel-default
              .panel-heading
                h4.panel-title 
              .panel-content.text-center
                canvas#lineChart.chart(height='380')
              .panel-footer.text-center 
                p.pt-3 A sample Line Chart with basic settings

          .col-md-4.my-2
            .panel.panel-default
              .panel-heading
                h4.panel-title 
              .panel-content.text-center
                canvas#singelBarChart.chart(height='380')
              .panel-footer.text-center 
                p.pt-3 A sample Single Bar Chart with basic settings

          .col-md-4.my-2
            .panel.panel-default
              .panel-heading
                h4.panel-title
              .panel-content.text-center
                canvas#barChart.chart(height='380')
              .panel-footer.text-center 
                p.pt-3 A sample Bar Chart with basic settings

          .col-md-4.my-2
            .panel.panel-default
              .panel-heading
                h4.panel-title
