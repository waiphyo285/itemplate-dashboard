extends ../includes/auth/main-auth

block content
  
  form(action="/login" method="post")
    div.head
      img.logo(src="../images/auth/it-logo.png", alt="logo", srcset="")
    
    div.form-group
      div.col-sm-12.mb-3
        //- h4.title !{app.NAME}
        span.sub-title !{title}

      div.col-sm-12.mb-3
        input.form-control.input-sm#username(type='text', name='username', placeholder="username" maxlength="55" autocomplete="off" required autofocus)

      div.col-sm-12.mb-3
        div.input-group
          input.form-control.input-sm#password(type='password', name='password', placeholder="password" maxlength="55" required)
          div.input-group-append
            div.input-group-text
              i.bi.bi-eye-slash(aria-hidden='true')

      div.col-sm-12.mb-3
         button.signin-button(type="submit") 
          i.bi.bi-box-arrow-in-right
          | &nbsp; !{buttonText}
    
    div.link.text-center
      //- a(href="#") Forgot password? or 
      a(href="/signup") If you don't have developer account? 
        span Sign Up

  script.