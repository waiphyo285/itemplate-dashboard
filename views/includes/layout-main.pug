  function dataTableDef (curPage) { 
    const buttons = [
      'excel',
      'pdf', 
      'print'
    ];

    const options = {
      exportOptions: {
        modifier: {
          order: 'index',
          page: 'all',
          search: 'none'
        },
        columns: ':visible'
      }
    };

    const langOptions = {
      "searchPlaceholder": "Search",
      "paginate": {
        "first": "<i class='bi bi-chevron-double-left'/>",
        "previous": "<i class='bi bi-chevron-left'/>",
        "next": "<i class='bi bi-chevron-right'/>",
        "last": "<i class='bi bi-chevron-double-right'/>"
      }
    };

    const buttonOptions  = buttons.map((button) => {
      return {
        filename: curPage,
        extend: button,
        ...options
      }
    });

    const lengthOptions = [
      [10, 25, 50, -1],
      [10, 25, 50, 'All'],
    ];

    return {
      "destroy": true,
      "scrollX": true,
      "autoWidth": true,
      "serverSide": true,
      //- "processing": true,
      "pagingType": "full_numbers",
      "language": langOptions,
      "buttons": buttonOptions,
      "lengthMenu": lengthOptions,
    };
  }

  function fetchDataDef (curUrl) {
    return {
      "url": "./api" + curUrl,
      "headers": {
        "userrole": role,
        "x-access-method": signJwtMethod,
        "authorization": "Bearer " + token
      },
      "dataSrc": "data",
    };
  }

